{% extends 'base.html.twig' %}

{% block title %}Tournament Master{% endblock %}

{% block body %}

    
<h2>Tournaments</h2>
{% if is_granted("ROLE_USER") %}
    {% if app.user.verified == true %}
        <a href="/tournament/new">Create New Tournament</a>
    {% endif %}
{% endif %}
<div class="row">
    {% for tournament in tournaments %}
    {# <div class="card">
        <h5 class="card-header">Featured</h5>
        <div class="card-body">
            <h5 class="card-title">Special title treatment</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div> #}
        <div>
            <div>
                <h3><a href="/seetournament/{{tournament.id}}">{{tournament.title}}</a> - by {{tournament.creatorUser.username}}</h3>
                <div>
                    {% if tournament.finished %}<p>This tournament has finished.</p>{% endif %}
                    <p>{{ tournament.description|length > 50 ? tournament.description|slice(0, 50) ~ '...' : tournament.description  }}</p>
                    <p>VideoGame: {{ tournament.videogame }}</p>
                    <p>Places: {{tournament.players|length}}/20</p>
                    <h4>Start Date: {{tournament.startDate|date('Y-m-d  H:i:s') }}</h4>
                    {% if is_granted("ROLE_USER") %}
                        {% if app.user.id != tournament.creatorUser.id %}
                            {% if tournament.finished == false %}
                                {% if app.user not in tournament.players %}
                                    {% if app.user.verified == true %}
                                        {% if date() < date(tournament.startDate) %}
                                            {% if tournament.players|length < 20 %}
                                                <a href="/signuptotournament/{{tournament.id}}">Sign Up</a>
                                            {% else %}
                                                <p>You can't Sign Up to this Tournament because there's no more places left. Max 20 players per tournament.</p>
                                            {% endif %}
                                        {% else %}
                                            <p>You can't Sign Up to this Tournament the date to Sign Up has expired. You have to Sign Up before the Start Date.</p>
                                        {% endif %}
                                    {% else %}
                                        <p>You can't Sign Up to this Tournament because you're not a verified user.</p>
                                    {% endif %}
                                {% else %}
                                    <p>You already Signed Up to this Tournament.</p>
                                {% endif %}
                            {% else %}
                                <p>You can't Sign Up to a finished Tournament.</p>
                            {% endif %}
                        {% else %}
                            {% if tournament.finished == true %}
                                <p>Your tournament has finished, you can't finish it or delete it.</p>
                            {% elseif date() > date(tournament.startDate) %}
                                <p>You can't Sign Up to your own Tournament.</p>
                                <a href="/finishtournament/{{tournament.id}}">Finish Tournament</a>
                            {% elseif date() < date(tournament.startDate) %}  
                                <p>You can't Sign Up to your own Tournament.</p>
                                <a href="/deletetournament/{{tournament.id}}">Delete Tournament</a>  
                            {% endif %}
                        {% endif %}
                    {% else %}
                        <p>Login to be able to Sign Up to this Tournament.</p>
                    {% endif %}
                </div>
            </div>
        </div>            
    {% endfor %}
</div>

{% endblock %}
