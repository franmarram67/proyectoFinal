{% extends 'base.html.twig' %}

{% block title %}Tournament Master{% endblock %}

{% block body %}

<h1>Tournament Master</h1>
{% if is_granted("ROLE_USER") %}
    Hello, {{app.user.email}} - <a href="/logout">Logout</a><br>
{% else %}
    <a href="/register">Register</a> or <a href="/login">Login</a>
{% endif %}
<hr>

<h2>Created Tournaments</h2>
{% for t in app.user.createdTournaments|slice(0, 10) %}
    <p>{{t.title}} - by {{t.creatorUser.username}}</p>
{% endfor %}

<h2>Pending Tournaments</h2>
{% for t in pending|slice(0, 10) %}
    <p>{{t.title}} - by {{t.creatorUser.username}}</p>
{% endfor %}

<h2>Tournaments In Progress</h2>
{% for t in inprogress|slice(0, 10) %}
    <p>{{t.title}} - by {{t.creatorUser.username}}</p>
{% endfor %}

<h2>Finished Tournaments</h2>
{% for t in finished|slice(0, 10) %}
    <p>{{t.title}} - by {{t.creatorUser.username}}</p>
{% endfor %}


{% endblock %}