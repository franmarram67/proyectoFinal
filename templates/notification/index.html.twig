{% extends 'base.html.twig' %}

{% block title %}Notification index{% endblock %}

{% block body %}

<div class="slider common">
    {# <img src="/img/slider1.jpg"/> #}
</div>

<div class="body">

<main>
    <div class="mainHeader">
        <div class="mainHeaderTitle"><h1>Notification index</h1></div>
    </div>
    <div class="mainAdminContent">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Text</th>
                    <th>User</th>
                    <th>Seen</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for notification in notifications %}
                <tr>
                    <td>{{ notification.id }}</td>
                    <td>{{ notification.text }}</td>
                    <td>{{ notification.user }}</td>
                    <td>{{ notification.seen ? "Yes" : "No" }}</td>
                    <td>
                        <a href="{{ path('notification_show', {'id': notification.id}) }}">show</a>
                        <a href="{{ path('notification_edit', {'id': notification.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('notification_new') }}">Create new</a>
    </div>

</main>
    

</div>

{% endblock %}
