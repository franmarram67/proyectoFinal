{% block body %}

<div class="slider common">
    {# <img src="/img/slider1.jpg"/> #}
</div>

<div class="body">

<main>
    <div class="mainHeader">
        <div class="mainHeaderTitle"><h1>VideoGame</h1></div>
    </div>
    <div class="mainAdminContent">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ video_game.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ video_game.title }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ video_game.image }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ video_game.description }}</td>
                </tr>
                <tr>
                    <th>Link</th>
                    <td>{{ video_game.link }}</td>
                </tr>
                <tr>
                    <th>AgeRating</th>
                    <td>{{ video_game.ageRating }}</td>
