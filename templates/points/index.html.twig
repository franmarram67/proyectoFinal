{% extends 'base.html.twig' %}

{% block title %}Points index{% endblock %}

{% block body %}
    <h1>Points index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Datetime</th>
                <th>Tournament</th>
                <th>User</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for point in points %}
            <tr>
                <td>{{ point.id }}</td>
                <td>{{ point.amount }}</td>
                <td>{{ point.datetime ? point.datetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ point.tournament }}</td>
                <td>{{ point.user }}</td>
                <td>
                    <a href="{{ path('points_show', {'id': point.id}) }}">show</a>
                    <a href="{{ path('points_edit', {'id': point.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('points_new') }}">Create new</a>
{% endblock %}
