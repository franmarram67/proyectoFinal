{% extends 'base.html.twig' %}

{% block title %}Points{% endblock %}

{% block body %}

<div class="slider common">
    {# <img src="/img/slider1.jpg"/> #}
</div>

<div class="body">

<main>
    <div class="mainHeader">
        <div class="mainHeaderTitle"><h1>Points</h1></div>
    </div>
    <div class="mainAdminContent">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ point.id }}</td>
                </tr>
                <tr>
                    <th>Amount</th>
                    <td>{{ point.amount }}</td>
                </tr>
                <tr>
                    <th>Datetime</th>
                    <td>{{ point.datetime ? point.datetime|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Tournament</th>
                    <td>{{ point.tournament }}</td>
                </tr>
                <tr>
                    <th>User</th>
                    <td>{{ point.user }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('points_index') }}">back to list</a>

        <a href="{{ path('points_edit', {'id': point.id}) }}">edit</a>

        {{ include('points/_delete_form.html.twig') }}
    </div>

</main>
    

</div>

{% endblock %}
