{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

<div class="slider common">
    {# <img src="/img/slider1.jpg"/> #}
</div>

<div class="body">

<main>
    <div class="mainHeader">
        <div class="mainHeaderTitle"><h1>User</h1></div>
    </div>
    <div class="mainAdminContent">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                {#<tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>#}
                <tr>
                    <th>Verified</th>
                    <td>{{ user.verified ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>ProfilePicture</th>
                    <td><img src="/img/{{ user.profilePicture }}" width="100px" /></td>
                </tr>
                <tr>
                    <th>Dni</th>
                    <td>{{ user.dni }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Surname</th>
                    <td>{{ user.surname }}</td>
                </tr>
                <tr>
                    <th>Province</th>
                    <td>{{ user.province }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('user_index') }}">back to list</a>

        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
        <a href="{{ path('user_verify', {'id': user.id}) }}">verify</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>

</main>
    

</div>

{% endblock %}
