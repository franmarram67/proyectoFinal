{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<div class="slider common">
    {# <img src="/img/slider1.jpg"/> #}
</div>

    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Verified</th>
                <th>ProfilePicture</th>
                <th>Dni</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Province</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.verified ? 'Yes' : 'No' }}</td>
                <td><img src="/img/{{ user.profilePicture }}" width="100px" /></td>
                <td>{{ user.dni }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.province }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    {#<a href="{{ path('user_delete', {'id': user.id}) }}">delete</a>#}
                    <a href="{{ path('user_verify', {'id': user.id}) }}">verify</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
